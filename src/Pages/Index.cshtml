@page
@using ContosoCrafts.WebSite.Components
@model IndexModel
@{
    ViewData["Title"] = "Home";
}
<div class="landing-section">
	<div>
		<div class="img-top-container">
			<img src="../img/landing-bg-01.png"
				 class="landing-img-top" />
		</div>
        <div class="website-info">
            <img src="../img/full-logo.png"
                 class="full-logo" />
            <p class="website-description">Busy? Healthy? Both?<br> Explore Convenient Meal Solutions Now!</p>
            <a href="/Recipes">
                <button class="recipe-button">RECIPES</button>
            </a>
        </div>
		<div class="img-bottom-container">
		<img src="../img/landing-bg-02.png"
			 class="landing-img-bottom" />
		</div>
	</div>
	
</div>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Custom CSS Example</title>
    <style>
        /* Custom CSS */
        .website-info {
            text-align: center;
            margin-top: 50px; /* Adjust as needed */
        }

        .full-logo {
            width: 200px; /* Adjust as needed */
            height: auto; /* Maintain aspect ratio */
        }

        .website-description {
            font-size: 18px; /* Adjust as needed */
            color: #333; /* Adjust text color */
        }

        .recipe-button {
            background-color: #FF5733; /* Adjust button background color */
            color: white; /* Adjust button text color */
            border: none;
            padding: 10px 20px; /* Adjust button padding */
            font-size: 16px; /* Adjust button font size */
            cursor: pointer;
            border-radius: 5px; /* Rounded corners */
            margin-top: 20px; /* Adjust spacing */
        }

        .recipe-button:hover {
            background-color: #D93600; /* Adjust hover background color */
        }
    </style>
</head>